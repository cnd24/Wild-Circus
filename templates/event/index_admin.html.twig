{% extends 'base.html.twig' %}

{% block title %}Admin | Index des spectacles{% endblock %}

{% block header %}
    {% include '/include/_navbar_admin.html.twig' %}
{% endblock %}

{% block body %}


    <div class="container">
        <h2 class="text-center">Index des spectacles</h2>
        <a href="{{ path('event_new_admin') }}" class="btn btn-get-started mb-3">Créer un spectacle</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Durée <em>(en min)</em></th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.duration }}</td>
                <td>
                    <a href="{{ path('event_show_admin', {'id': event.id}) }}"><i class="far fa-eye mr-3"></i></a>
                    <a href="{{ path('event_edit_admin', {'id': event.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de spectacle disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



    </div>
{% endblock %}
