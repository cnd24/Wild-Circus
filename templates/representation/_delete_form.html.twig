<form method="post" action="{{ path('representation_delete_admin', {'id': representation.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cette représentation?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ representation.id) }}">
    <button class="btn btn-delete m-3"><i class="fas fa-times mr-3"></i>Supprimer</button>
</form>
