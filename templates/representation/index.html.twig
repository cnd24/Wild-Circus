{% extends 'base.html.twig' %}

{% block title %}Representation index{% endblock %}

{% block body %}
    <h1>Representation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for representation in representations %}
            <tr>
                <td>{{ representation.id }}</td>
                <td>{{ representation.city }}</td>
                <td>{{ representation.date ? representation.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('representation_show', {'id': representation.id}) }}">show</a>
                    <a href="{{ path('representation_edit', {'id': representation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('representation_new') }}">Create new</a>
{% endblock %}
