{% extends 'base.html.twig' %}

{% block title %}Admin | Une représentation{% endblock %}

{% block header %}
    {% include '/include/_navbar_admin.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="my-5">Détail de la représentation</h2>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ representation.id }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ representation.city }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ representation.date ? representation.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Spectacle</th>
                <td>{{ representation.event.name }}</td>
            </tr>
            </tbody>
        </table>
        <a href="{{ path('representation_edit_admin', {'id': representation.id}) }}" class="btn-get-started m-3"><i
                    class="fas fa-pencil-alt mr-3"></i>Modifier</a>

        {{ include('representation/_delete_form.html.twig') }}

        <a href="{{ path('representation_index_admin') }}" class="btn-get-started m-3"><i
                    class="fas fa-angle-left mr-3"></i>Retour à la liste</a>

    </div>
{% endblock %}
