{% extends 'base.html.twig' %}

{% block title %}Connexion au Wild Circus{% endblock %}

{% block body %}
    <div class="container my-5">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    {{ app.user.username | capitalize }}, vous êtes déjà connecté. <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h3 class="mb-5">Connectez-vous</h3>
            <div class="my-3">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
                       autofocus>
            </div>
            <div class="my-3">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-get-started" type="submit"> Valider </button>
        </form>
    </div>
{% endblock %}
